{
    "compilerOptions": {
      "target": "es2018",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "declaration": true,
      "declarationDir": "dist"
    },
    "include": ["src/**/*"]
  }
  